
var new_login;

$('#bt_login').bind('click', function(){
  console.log('нажали Вход');  
  
	//считаваем login
	new_login =  $('#login_input').val();
   console.log(new_login);
   alert(new_login);
   
   //переходим на вторую страницу
   document.location.href = "second_page.html";
  
});

